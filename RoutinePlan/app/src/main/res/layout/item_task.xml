<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      >

    <TextView
        android:id="@+id/text_view_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Test"
        android:fontFamily="sans-serif-light"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/text_view_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view_task_name"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end|center"
        android:layout_alignTop="@id/text_view_task_name"
        android:layout_alignBottom="@id/text_view_task_name"
        tools:text="1 Hour"
        android:textSize="16sp"
        />
  </RelativeLayout>
</layout>